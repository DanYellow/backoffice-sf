{% macro galleryelmt(galleryItem) %}
{% set imgCompletePath = app.request.scheme ~ '://' ~ app.request.host ~ ':' ~ app.request.port ~ '/' ~ galleryItem.getWebPath %}
  <li class="list-gallery__elmt" tabindex="1">
    <div class="list-gallery__elmt-container">
        <ul class="toolbar list-unstyled">
            <li>
                <button 
                    class="reset-btn distruptive" 
                    data-toggle="modal" 
                    data-target="#removeItemGalleryModal" 
                    data-img-to-delete-src="{{ imgCompletePath }}" 
                    data-title-modal="Souhaitez-vous supprimer cette image ?" 
                    data-occurences-image="{{ galleryItem.galleryItemsOrder|length }}"
                    data-url="{{ path('backend_admin_gallery_delete', {'id' : galleryItem.id }) }}"
                    >
                    Supprimer
                </button>
            </li> 
        </ul>
    </div>
    <figure><img src="{{ galleryItem.getWebPath | imagine_filter('gallery_thumb') }}" alt="{{ galleryItem.name }}" /></figure>
  </li>
{% endmacro %}